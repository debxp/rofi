#!/usr/bin/env bash

theme="$HOME/.config/rofi/themes/debxp-center.rasi"

opt1="Logout\nReiniciar\nDesligar"
opt2="Sim\nNão"


ask() {
    answer="$( echo -e $1 | rofi -dmenu -p "$2" -theme $theme )"
}

ask "$opt1" "Encerrar sessão"

case $answer in
    "Logout")
        ask "$opt2" "Quer mesmo sair do i3wm?"
        if [[ $answer == "Sim" ]]; then
            i3-msg exit
        fi
        exit 0
        ;;
    "Reiniciar")
        ask "$opt2" "Quer mesmo reiniciar o sistema?"
        if [[ $answer == "Sim" ]]; then
            systemctl reboot
        fi
        exit 0
        ;;
    "Desligar")
        ask "$opt2" "Quer mesmo desligar o computador?"
        if [[ $answer == "Sim" ]]; then
            systemctl poweroff
        fi
        exit 0
        ;;
esac

exit 0
